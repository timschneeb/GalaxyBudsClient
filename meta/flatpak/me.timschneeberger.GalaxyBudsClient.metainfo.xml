<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>me.timschneeberger.GalaxyBudsClient</id>

  <name>Earbud manager for Galaxy Buds</name>
  <developer id="me.timschneeberger">
    <name>Tim Schneeberger</name>
  </developer>
  <summary>An unofficial app to manage any Galaxy Buds device manufactured by Samsung</summary>

  <branding>
    <color type="primary" scheme_preference="light">#dff1f8</color>
    <color type="primary" scheme_preference="dark">#388ba6</color>
  </branding>

  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-only</project_license>

  <url type="homepage">https://github.com/ThePBone/GalaxyBudsClient</url>
  <url type="bugtracker">https://github.com/ThePBone/GalaxyBudsClient/issues/new/choose</url>
  <url type="donation">https://ko-fi.com/H2H83E5J3</url>
  <url type="translate">https://github.com/ThePBone/GalaxyBudsClient/wiki/3.-How-to-help-with-translations</url>
  <url type="contact">https://t.me/thepbone</url>

  <description>
    <p>
      Aside from standard features known from the official Android app, this project helps you to release the full potential of your earbuds and implements new functionality such as:
    </p>
    <ul>
      <li>Detailed battery statistics</li>
      <li>Diagnostics and factory self-tests</li>
      <li>Loads of hidden debugging information</li>
      <li>Customizable long-press touch actions</li>
      <li>Firmware flashing, downgrading (Buds+, Buds Pro)</li>
      <li>and much more</li>
    </ul>
  </description>

  <provides>
    <dbus type="user">me.timschneeberger.galaxybudsclient</dbus>
  </provides>

  <launchable type="desktop-id">me.timschneeberger.GalaxyBudsClient.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://raw.githubusercontent.com/ThePBone/GalaxyBudsClient/master/screenshots/app_dark.png</image>
    </screenshot>
    <screenshot>
      <image>https://raw.githubusercontent.com/ThePBone/GalaxyBudsClient/master/screenshots/app_light.png</image>
    </screenshot>
  </screenshots>
  <categories>
    <category>Utility</category>
  </categories>
  <releases>
    <release version="4.6.0" date="2024-03-13"/>
  </releases>
  <content_rating type="oars-1.1">
    <content_attribute id="social-info">moderate</content_attribute>
  </content_rating>
</component>

