<UserControl x:Class="GalaxyBudsClient.Interface.Items.IconListItem"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns="https://github.com/avaloniaui"
             xmlns:items="clr-namespace:GalaxyBudsClient.Interface.Items"
             mc:Ignorable="d" Height="50">
    <Grid HorizontalAlignment="Left">
        <Image Source="{Binding $parent[items:IconListItem].Source}" Width="45" Margin="9,0,158,0" HorizontalAlignment="Left"/>
        <Label Content="{Binding $parent[items:IconListItem].Text}" Foreground="{DynamicResource ForegroundTextBrush}" Margin="60,2,0,1" FontSize="{Binding $parent[items:IconListItem].FontSize}" VerticalContentAlignment="Center" />
    </Grid>
</UserControl>
